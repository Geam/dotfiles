# fzf config

if ! type "fzf" > /dev/null; then
    exit
fi

if [[ -e /usr/share/fzf/key-bindings.zsh ]]; then source /usr/share/fzf/key-bindings.zsh; fi
if [[ -e /usr/share/fzf/completion.zsh ]]; then source /usr/share/fzf/completion.zsh; fi
if [[ -e /usr/share/doc/fzf/examples/key-bindings.zsh ]]; then source /usr/share/doc/fzf/examples/key-bindings.zsh; fi
if [[ -e /usr/share/doc/fzf/examples/completion.zsh ]]; then source /usr/share/doc/fzf/examples/completion.zsh; fi

# fzf default command
export FZF_DEFAULT_COMMAND='rg --files --hidden'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# fzf default opts
export FZF_DEFAULT_OPTS='--height 40% --reverse --inline-info --tabstop 4'

fd() {
    # fd - cd to selected directory
    local dir
    dir=$(find ${1:-*} -path '*/\.*' -prune -o -type d -print 2> /dev/null | fzf +m) &&
    cd "$dir"
}

# vim: filetype=sh tabstop=4 shiftwidth=4 expandtab
